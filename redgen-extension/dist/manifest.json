{
    "manifest_version": 3,
    "name": "RedGen - POD AI Assistant",
    "version": "1.0",
    "description": "Optimize Redbubble listings with Gemini AI.",
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.redbubble.com/*",
        "https://ih1.redbubble.net/*"
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.redbubble.com/*"
            ],
            "js": [
                "assets/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Open RedGen",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    }
}